configuration {
	display-drun: "";
	display-window: "";
	drun-display-format: "{icons} {name}";
	font: "Dejavu Sans 8";
	modi: "drun,run,window,emoji";
	show-icons: true;
	icon-theme: "Delight";
	kb-remove-to-eol: "";
	kb-accept-entry: "Return";

  timeout {
      action: "kb-cancel";
      delay:  5;
  }

	drun {
		display-name: "";
	}

	run {
		display-name: "";
	}

	window {
		display-name: "";
	}

	emoji {
		display-name: "";
	}

	clipboard {
		display-name: "";
	}
}

* {
	font:   "Ubuntu 11";

	bg0:    #141313CC;
	bg1:    #14131CCC;
	bg2:    #e5759b44;

	fg0:    #eeeeee;
	fg1:    #eeeeee;
	fg2:    #eeeeee80;

	background-color:   transparent;
	text-color:         @fg0;

	margin:     0;
	padding:    0;
	spacing:    0;

}

window {
	background-color:   @bg0;

	location:       center;
	width:          620;
	border-radius:  20;

}

inputbar {
	font:       "Ubuntu Bold 16";
	padding:    12px;
	spacing:    12px;
	children:   [ prompt, entry ];
}

prompt {
	text-color: @fg1;
	font: "Symbols Nerd Font 18";
	background-color: inherit;
	padding: 10px 5px;
}

entry {
	font:   inherit;
	placeholder-color   : @fg2;
	padding: 10px;

}

message {
	border-color:       @bg1;
	background-color:   @bg1;
}

element {
	padding:            14px 16px;
	spacing:            16px;
	background-color:   transparent;
}

element normal active {
	text-color: @bg2;
}

element selected normal, element selected active {
	background-color:   @bg2;
	text-color:         #eeeeee;
}

element-icon {
	size:   1.8em;
}

element-text {
	background-color: #00000000;
	text-color: inherit;
	padding: 10px 0px;
}
